<h3>Edit Employee</h3>
{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
{{#each rows}}
<form method="post" action="/editUser/{{this.ID}}">
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{this.NAME}}"/>
</div>
<div class="form-group">
    <label for="age">Age</label>
    <input type="number" name="age" value="{{this.AGE}}"/>
</div>
<div class="form-group">
    <label for="desination">Designation</label>
    <input type="text" name="designation" value="{{this.DESIGNATION}}"/>
</div>
<div class="form-group">
    <label for="salary">Salary</label>
    <input type="text" name="salary" value="{{this.SALARY}}"/>
</div>
<div class="form-group">
    <label for="phoneno">Phone No</label>
    <input type="number" name="phoneno" value="{{this.PHONENO}}"/>
</div>
<div class="form-group">
    <button type="submit">Save</button>
     <a href="/">Back</a>
</div>

</form>
{{/each}}